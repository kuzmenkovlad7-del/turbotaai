####################################
# Core app config
####################################

# Базовый URL приложения (для ссылок, почты, редиректов)
NEXT_PUBLIC_APP_URL=http://localhost:3000


####################################
# Supabase
####################################

# Публичный URL проекта Supabase
NEXT_PUBLIC_SUPABASE_URL=

# Публичный анонимный ключ Supabase (может быть в браузере)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service Role key — НИКОГДА не должен уходить на фронт.
# Используем только в серверных роутингах (API routes, Edge functions)
SUPABASE_SERVICE_ROLE_KEY=


####################################
# OpenAI (чат ассистент, голос и т.д.)
####################################

# Главный ключ для всех серверных запросов к OpenAI
OPENAI_API_KEY=


####################################
# Auth / NextAuth
####################################

# Секрет для подписи токенов NextAuth
NEXTAUTH_SECRET=

# Базовый URL для NextAuth (на проде — https://myitra.app или что выберем)
NEXTAUTH_URL=http://localhost:3000


####################################
# n8n (на будущее для голосового и видео ассистентов)
####################################

# Webhook для чат-ассистента, если будем гонять через n8n
# (сейчас НЕ обязателен — чат может работать напрямую через OpenAI)
N8N_CHAT_WEBHOOK_URL=

# Резерв для голосового ассистента
N8N_VOICE_WEBHOOK_URL=

# Резерв для видео-ассистента
N8N_VIDEO_WEBHOOK_URL=


####################################
# Optional / вспомогательные URL
####################################

# Если где-то нужен внешний API URL (можно пока оставить пустым)
NEXT_PUBLIC_API_URL=

# Если какие-то старые компоненты ждут публичного webhook-URL
NEXT_PUBLIC_WEBHOOK_URL=
