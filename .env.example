########################################
# Core app config
########################################

# Базовый URL приложения (для ссылок в письмах, редиректов и т.п.)
NEXT_PUBLIC_APP_URL=https://myitra-app.bolt.host

########################################
# Supabase (авторизация, профиль, лимиты вопросов и т.п.)
########################################

# Публичный URL проекта Supabase (может быть в браузере)
NEXT_PUBLIC_SUPABASE_URL=

# Публичный анонимный ключ Supabase (может быть в браузере)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service Role key — НИКОГДА не уходит на фронт.
# Используем только в серверных роутингах (API routes)
SUPABASE_SERVICE_ROLE_KEY=

########################################
# OpenAI (чат ассистент, голос, видео)
########################################

# Главный ключ для всех серверных запросов к OpenAI
OPENAI_API_KEY=

########################################
# n8n webhooks (опционально, можно не использовать)
########################################

# Webhook для текстового чата (если решим выносить логику в n8n)
N8N_CHAT_WEBHOOK_URL=

# Webhook для голосового ассистента
N8N_VOICE_WEBHOOK_URL=

# Webhook для видео-ассистента / доп. логики
N8N_VIDEO_WEBHOOK_URL=

########################################
# Auth / вход по коду на e-mail
########################################

# NEXTAUTH_URL: базовый URL приложения (для callback-ов)
NEXTAUTH_URL=http://localhost:3000

# Секрет для NextAuth (можно сгенерить любой длинный random string)
NEXTAUTH_SECRET=

# Отправитель писем с кодами входа
EMAIL_FROM=support@myitra.app

# SMTP-сервер для отправки e-mail-кодов (можно позже настроить)
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=

########################################
# Платежи (WayForPay + Apple / Google Pay)
########################################

WAYFORPAY_MERCHANT_ACCOUNT=
WAYFORPAY_MERCHANT_DOMAIN_NAME=myitra.app
WAYFORPAY_MERCHANT_SECRET_KEY=
# URL, куда WayForPay вернёт пользователя после оплаты
WAYFORPAY_RETURN_URL=
# URL для серверных callback-ов (наш API-роут)
WAYFORPAY_SERVICE_URL=

########################################
# Продуктовая логика (лимиты и цены)
########################################

# Вопросов бесплатно после тестового периода
FREE_QUESTIONS_LIMIT=5

# Включён ли тестовый период (true/false)
TEST_MODE_ENABLED=true

# Цена помесячной подписки (грн)
MONTHLY_PLAN_PRICE_UAH=399

# Цена разовой сессии (грн)
ONE_OFF_SESSION_PRICE_UAH=99
